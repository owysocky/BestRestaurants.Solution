
<h1>Cuisines:</h1>

@if (@Model.Count == 0)
{
  <h3>No cuisines have been added yet!</h3>
}

@foreach (var cuisine in Model)
{
  <h3><a href='/cuisines/@cuisine.GetId()'>@cuisine.GetType()</a></h3>
}

<form action='/cuisines/new' method='get'>
<button type="submit">Add a new cuisine type</button>
</form>

<form action='/' method='get'>
<button type="submit">Back home</button>
</form>
